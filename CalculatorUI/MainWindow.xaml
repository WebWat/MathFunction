<Window x:Class="CalculatorUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorUI"
        mc:Ignorable="d"
        Title="Calcultor" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="text" HorizontalAlignment="Center" FontSize="20" TextAlignment="Center" VerticalContentAlignment="Center" Height="50" Margin="0,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="550" TextChanged="TextChanged"/>
        <TextBlock x:Name="result" HorizontalAlignment="Center" Text="0" TextAlignment="Center" FontSize="20" FontWeight="Bold" Height="30" Margin="0,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260"/>
    </Grid>
</Window>
